{
	"compileOnSave": false,
  	"compilerOptions": {
		"baseUrl": "./",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
    	"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./build",
		"pretty": true,
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"target": "es6",
		"typeRoots" : [
			"./node_modules/@types",
			"./typings"
		]
	},
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
	"include": [
		"./**/*"
	],
	"lib": [
		"es2018",
		"dom"
	]
}
